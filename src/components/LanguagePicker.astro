---
import { languages, type Lang } from '../i18n/ui';
import { getLocalePath } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<div class="flex items-center gap-1 text-sm">
  {Object.entries(languages).map(([code, label], i) => (
    <>
      {i > 0 && <span class="text-cream/30">|</span>}
      <a
        href={getLocalePath(code as Lang)}
        class:list={[
          'px-1 py-0.5 transition-colors',
          code === lang ? 'text-gold font-medium' : 'text-cream/50 hover:text-cream',
        ]}
      >
        {code.toUpperCase()}
      </a>
    </>
  ))}
</div>
