---
import type { Lang } from '../i18n/ui';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="portfolio" class="py-24 md:py-32">
  <div class="mx-auto max-w-7xl px-6">
    <p data-animate class="text-gold/80 text-sm tracking-[0.3em] uppercase mb-4">
      {t('portfolio.label')}
    </p>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Image -->
      <div data-animate class="relative">
        <div class="aspect-[4/3] bg-teal-light overflow-hidden">
          <img
            src="/images/portfolio/hotel-des-indes.svg"
            alt="Hotel Des Indes"
            class="w-full h-full object-cover opacity-90 hover:opacity-100 transition-opacity duration-500"
            loading="lazy"
          />
        </div>
      </div>

      <!-- Details -->
      <div>
        <h2 data-animate class="font-heading text-4xl md:text-5xl lg:text-6xl text-cream font-semibold mb-2">
          {t('portfolio.title')}
        </h2>
        <p data-animate class="text-gold/70 text-sm tracking-widest uppercase mb-8">
          {t('portfolio.subtitle')}
        </p>
        <p data-animate class="text-cream/60 leading-relaxed mb-8">
          {t('portfolio.desc')}
        </p>

        <div data-animate class="mb-8">
          <p class="text-gold/80 text-xs tracking-[0.2em] uppercase mb-3">{t('portfolio.scope')}</p>
          <div class="flex flex-wrap gap-2">
            {t('portfolio.scope.items').split(', ').map((item) => (
              <span class="text-cream/50 text-xs border border-cream/15 px-3 py-1.5">
                {item}
              </span>
            ))}
          </div>
        </div>

        <a
          data-animate
          href="#"
          class="inline-block border border-gold/40 text-gold hover:bg-gold/10 px-8 py-3 text-sm tracking-widest uppercase transition-all duration-300"
        >
          {t('portfolio.cta')}
        </a>
      </div>
    </div>
  </div>
</section>
